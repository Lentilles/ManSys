@model ManSys.ViewModels.LoginViewModel

<h2>Вход в приложение</h2>
<hr />
<div class="container">
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl" class="w-50">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="m-2 input-group w-50">
        <label asp-for="Input.Email" class="input-group-text w-25"></label><br />
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email"></span>
    </div>
    <div class="m-2 input-group w-50">
        <label asp-for="Input.Password" class="input-group-text w-25"></label><br />
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password"></span>
    </div>
    <div class="m-2 w-50">
        <input asp-for="Input.RememberMe" class="form-check-input p-2"/>
        <label asp-for="Input.RememberMe" class="form-check-label"></label>
    </div>
    <div class="m-2">
        <input type="submit" value="Войти" class="btn btn-outline-primary w-25"/>
    </div>
</form>
</div>