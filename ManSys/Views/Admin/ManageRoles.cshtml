@model ManSys.ViewModels.RolesViewModel

<ul class="list-group">
    @foreach(var role in Model.Roles){
        <li class="list-group-item">
            @if(role.Name != "Admin")
            {
                <form method="" action="">
                    <div class="input-group mb-3">
                    <input asp-for="input.Role.Name" class="form-control m-1 rounded-0" value="@role.Name" />
                    <input formaction="DeleteRole" formmethod="post" class="btn btn-outline-danger m-1 rounded-0" type="submit" value="Удалить роль" />
                    </div>
                </form>
            }
            else
            {
                <strong>Управление ролями</strong>
            }
        </li>
    }
    <li class="list-group-item">
        <form method="post" asp-controller="Admin" asp-action="CreateRole">
            <div class="input-group mb-3">
                <input asp-for="input.Role.Name" placeholder="Введите название роли" class="form-control m-1 rounded-0" />
                <input class="btn btn-outline-primary m-1 rounded-0" type="submit" value="Создать" />
            </div>
        </form>
    </li>
    <li class="list-group-item">
        <button class="btn btn-primary rounded-0" type="submit"> Сохранить </button>
    </li>
</ul>
